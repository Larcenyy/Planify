<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-9 col-xl-5 px-4">
            <div class="mt-4">
                {{ form_start(form) }}

                {{ form_errors(form) }}

                <div class="mb-3">
                    {{ form_row(form.title) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.content) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.location) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.startAt) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.endAt) }}
                </div>

                {{ form_row(form.submit) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
