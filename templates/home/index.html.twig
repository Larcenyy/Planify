{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center mb-4">
            <div class="col-xl-4 d-flex flex-wrap flex-column align-items-center">
                <h1 class="text-center my-4">Planify | Nos √©v√©nements √† venir</h1>
                <p class="text-center">Inscrivez-vous √† l'un des √©v√©nements vous correspondant.</p>
                <a href="{{ path('app_event_create') }}" class="text-center text-nowrap btn btn-primary px-3 py-2 mb-2 fw-semibold rounded-pill">Cr√©er un √©v√©nement</a>
            </div>
        </div>


        <div class="row gap-5 mx-auto justify-content-center">
            {% if events|length > 0 %}
                {% for event in events %}
                    <div class="col col-xl-3">
                        <div class="card h-100">
                            {% if event.getUser() == app.user %}
                                <a href="{{ path("app_event_delete", { 'id' : event.id }) }}" class="position-absolute end-0 top-0 end-0 text-nowrap text-danger p-1 mb-2 fw-semibold rounded-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                        <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5"/>
                                    </svg>
                                </a>
                            {% endif %}
                            <div class="d-flex card-body">
                                <div class="d-flex flex-column justify-content-center align-items-start">
                                    <div class="d-flex justify-content-around gap-2 mb-2 flex-wrap">
                                        <span class="badge bg-success bg-opacity-25 border-success rounded-pill text-success">D√©marre le : {{ event.startAt|date('d/m/Y') }} √† {{ event.startAt|date('H:i') }}</span>
                                        <span class="badge bg-danger bg-opacity-25 border-success rounded-pill text-danger">Fin le : {{ event.endAt|date('d/m/Y') }} √† {{ event.endAt|date('H:i') }}</span>
                                        <span class="badge bg-primary bg-opacity-25 border-success rounded-pill text-primary mt-1">Participant : {{ event.getSuscribers().count() }}</span>
                                    </div>
                                    <h5 class="mb-0 card-title text-uppercase">{{ event.title }}</h5>
                                    <p class="card-text mt-2 fw-medium mt-0 mb-0">üìç {{ event.location }}</p>

                                    <hr>
                                    <p class="card-text mt-2 fw-medium flex-grow-1">{{ event.content }}</p>
                                    <div class="d-flex flex-column flex-md-row flex-wrap justify-content-between gap-3">
                                        <small class="d-block">Cr√©er le : <span class="fw-bold">{{ event.createdAt|date('d/m/Y') }}</span> par <span class="fw-bold text-uppercase">{{ event.user.firstname }} {{ event.user.lastname }}</span></small>
                                        {% if event.getUser() == app.user %}
                                            <a href="{{ path("app_event_edit", { 'id' : event.id }) }}" class="text-nowrap btn btn-outline-secondary px-3 py-2 mb-2 fw-semibold rounded-pill">Modifier mes √©v√©nement</a>
                                        {% else %}
                                            {% if not event.getSuscribers().contains(app.user) %}
                                                <a href="{{ path('app_event_suscribe', { 'id' : event.id }) }}" class="text-nowrap btn btn-outline-success px-3 py-2 mb-2 fw-semibold rounded-pill">Rejoindre l'√©v√©nement</a>
                                            {% else %}
                                                <a href="{{ path('app_event_unsuscribe', { 'id' : event.id }) }}" class="text-nowrap btn btn-outline-danger px-3 py-2 mb-2 fw-semibold rounded-pill">Quitter l'√©v√©nement</a>
                                            {% endif %}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p class="text-center fw-bolder fs-4">Aucun √©v√©nement pour le moment.</p>
            {% endif %}
        </div>
    </div>
{% endblock %}